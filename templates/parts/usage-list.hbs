<div class="tnx-item-group-header">
    <label>用途一覧</label>
    <div class="item-controls">
        <a class="action-create" title="用途を追加"><i class="fas fa-plus"></i> 追加</a>
    </div>
</div>

<ol class="usage-list">
    {{#each system.actions as |action idx|}}
    <li class="usage-item flexrow">
        <div class="usage-header flexrow">
            <select name="system.actions.{{idx}}.type" class="usage-type-select">
                {{selectOptions ../options.usageTypes selected=action.type}}
            </select>
            <input type="text" name="system.actions.{{idx}}.name" value="{{action.name}}" placeholder="名称"/>
            <div class="item-controls">
                <a class="action-delete" data-index="{{idx}}" title="削除"><i class="fas fa-trash"></i></a>
            </div>
        </div>
        <div class="usage-body">
            <input type="text" name="system.actions.{{idx}}.description" value="{{action.description}}" placeholder="内容・効果など"/>
        </div>
    </li>
    {{/each}}
</ol>