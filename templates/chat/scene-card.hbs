<div class="tokyo-nova scene-operations-grid" style="padding: 10px; background: var(--tnx-color-bg-alt); border: 1px solid var(--tnx-color-border);">
    <div class="scene-card-header">
        <h2>{{{cardName}}}</h2>
    </div>
    <div class="scene-card-content" style="grid-template-columns: 150px 1fr; gap: 15px; align-items: flex-start;">
        <div class="scene-card-details" style="display: flex; flex-direction: column; gap: 10px;">
            <div class="detail-block">
                <h3 style="margin: 0 0 5px; font-size: 1.1em; color: var(--tnx-color-primary);">キーワード</h3>
                <p style="margin: 0;">{{keyword}}</p>
            </div>
            <div class="detail-block">
                <h3 style="margin: 0 0 5px; font-size: 1.1em; color: var(--tnx-color-primary);">暗示</h3>
                <p style="margin: 0;">{{implication}}</p>
            </div>
        </div>
    </div>
</div>