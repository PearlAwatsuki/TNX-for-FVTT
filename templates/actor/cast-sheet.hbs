                                                                    <input type="checkbox" class="skill-property-change" data-target="suit" data-suit="{{key}}" 
                                                                        {{checked (lookup item.system.suits key)}} />
                                                                    <i class="{{suitData.icon}}"></i>
                                                                </label>
                                                            {{/each}}
                                                        </div>
                                                    </div>
                                                    <div class="item-controls">
                                                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                                                    </div>
                                                </li>
                                            {{/each}}
